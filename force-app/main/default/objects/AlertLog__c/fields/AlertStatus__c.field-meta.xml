<?xml version="1.0" encoding="UTF-8"?>
<CustomField>
    <fullName>AlertStatus__c</fullName>
    <type>Picklist</type>
    <inlineHelpText>Tracks alert delivery progress: Pending (queued), Sent (delivered), Failed (delivery error), Retry (attempting again), Cancelled (stopped before sending).</inlineHelpText>
    <required>false</required>
    <description>Current delivery status of the alert notification, updated by the system during processing.</description>
    <label>Alert Status</label>
    <valueSet>
        <valueSetDefinition>
            <value>
                <fullName>Pending</fullName>
                <label>Pending</label>
                <default>true</default>
            </value>
            <value>
                <fullName>Sent</fullName>
                <label>Sent</label>
                <default>false</default>
            </value>
            <value>
                <fullName>Failed</fullName>
                <label>Failed</label>
                <default>false</default>
            </value>
            <value>
                <fullName>Retry</fullName>
                <label>Retry</label>
                <default>false</default>
            </value>
            <value>
                <fullName>Cancelled</fullName>
                <label>Cancelled</label>
                <default>false</default>
            </value>
            <sorted>true</sorted>
        </valueSetDefinition>
    </valueSet>
    <securityClassification>Internal</securityClassification>
</CustomField>